<div class="row">
{{#each boxList}}
    <div class="p-3">
        <div class="card text-center" style="width: 18rem;">
            <!--<img class="card-img-top" src="..." alt="Card image cap">-->
            <div class="card-header bg-info">
                {{#if this.public}}
                    <i class="fa fa-unlock"></i>
                {{else}}
                    <i class="fa fa-lock"></i>
                {{/if}}
                <h5 class="card-title"> {{ this.name}} </h5>
            </div>
            <div class="card-body bg-light">

                <h6 class="card-subtitle mb-2 text-muted"> {{ this.front}} - {{this.back}} </h6>
                <p class="card-subtitle mb-2 text-muted">Contains {{ this.verbCount }} verbs</p>
                <p class="card-subtitle mb-2 text-muted">Owner: {{ this.owner}}</p>

                {{#if this.progressFront}}
                    <div class="progress">
                        <div class="progress-bar bg-success" role="progressbar" style="width: {{this.progressFront}}%" aria-valuenow="{{this.progressFront}}" aria-valuemin="0" aria-valuemax="100">{{this.back}} - {{this.front}}: {{this.progressFront}} %</div>
                    </div>
                {{else}}
                    <div class="progress">
                        <div class="progress-bar bg-info" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">Not played</div>
                    </div>
                {{/if}}
                {{#if this.progressBack}}
                    <div class="progress">
                        <div class="progress-bar bg-success" role="progressbar" style="width: {{this.progressBack}}%" aria-valuenow="{{this.progressBack}}" aria-valuemin="0" aria-valuemax="100">{{this.front}} - {{this.back}}: {{this.progressBack}} %</div>
                    </div>
                {{else}}
                    <div class="progress">
                        <div class="progress-bar bg-info" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">Not played</div>
                    </div>
                {{/if}}
            </div>
            <div class="card-footer bg-secondary">
                <div class="">
                    <a href="#" class="btn btn-info" disabled>View</a>
                    <a href="/play/{{this.id}}" class="btn btn-primary">Play</a>
                    <a href="#/learn/{{this.id}}" class="btn btn-success"disabled>Learn</a>
                </div>
            </div>
        </div>
    </div>
{{/each}}
</div>